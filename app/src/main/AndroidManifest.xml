<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.asociadosmonterrubio.admin">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:name="com.asociadosmonterrubio.admin.utils.AppController"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.asociadosmonterrubio.admin.activities.ActivityNewEmployee"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.asociadosmonterrubio.admin.activities.ActivityDisplayEmployees"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.asociadosmonterrubio.admin.activities.ActivitySplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.asociadosmonterrubio.admin.activities.ActivityHome"/>
        <activity android:name="com.asociadosmonterrubio.admin.activities.ActivityCheckList"/>
        <activity android:name="com.asociadosmonterrubio.admin.activities.ActivityCheckListManual"/>
        <activity
            android:name="com.asociadosmonterrubio.admin.activities.ActivityLogin"
            android:theme="@style/NoActionBar"/>
        <activity android:name="com.asociadosmonterrubio.admin.activities.ActivityListEmployeesField">
        </activity>
        <activity android:name="com.asociadosmonterrubio.admin.activities.ActivityGenerateCredentials"/>

    </application>

</manifest>