<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/margin_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employee_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:paddingLeft="@dimen/margin_4dp"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_14dp"
            android:text="0"/>

        <TextView
            android:id="@+id/employee_id_external"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_14dp"
            android:text="0"/>

        <TextView
            android:id="@+id/employee_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_14dp"
            android:text="0"/>

        <ImageButton
            android:id="@+id/btn_for_printing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:scaleType="centerInside"
            android:src="@drawable/ic_touch_app"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employee_departure_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:paddingRight="@dimen/margin_6dp"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_12dp"
            android:text="0"/>

    </LinearLayout>

</LinearLayout>