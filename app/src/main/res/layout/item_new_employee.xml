<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_6dp"
    card_view:cardCornerRadius="@dimen/margin_2dp"
    card_view:contentPadding="@dimen/margin_6dp"
    card_view:cardElevation="@dimen/margin_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="@dimen/margin_4dp"
                android:paddingEnd="@dimen/margin_6dp">

                <TextView
                    android:id="@+id/txv_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/margin_4dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16dp"/>

                <TextView
                    android:id="@+id/txv_curp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_14dp"/>

                <TextView
                    android:id="@+id/txv_bus_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12dp"
                    android:textColor="@color/green"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:orientation="vertical"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/checkbox_selected"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

